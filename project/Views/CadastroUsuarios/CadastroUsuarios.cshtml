@model UserViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@section Styles{
    <link rel="stylesheet" type="text/css" href="~/css/cadastro.css" />
    <link href="~/css/site.css" rel="stylesheet" />
}
<body class="body-cadastro">

    <div class="tittle-cadastro">

        @{
            if (ViewBag.Operacao == "A")
            {
                <h1>
                    Alteração de Usuário
                </h1>
            }
            else
            {
                <h1>
                    Criando Usuário
                </h1>
            }
        }

    </div>
    <form action="Save" method="post" class="form-cadastro">

        <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />

        <div class="form-group">
            <label for="nome">Nome*</label>
            <input type="text" id="nome" name="nome" value="@Model.Nome">
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>


        @if (ViewBag.TipoUser == "Administrador" || Model.TipoUsuario == "Administrador")
        {

            <div class="form-group">
                <label for="username">Username*</label>
                <input type="text" id="username" name="username" placeholder="Username" value="@Model.Username" required>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="tipoUsuario">Tipo de Usuário*</label>
                <input type="text" name="tipoUsuario" class="form-control disabled" value="@ViewBag.TipoUser" readonly>
            </div>
        }

        @if (ViewBag.TipoUser == "Cliente" || Model.TipoUsuario == "Cliente")
        {
            <div class="form-group">
                <label for="tipoUsuario">Tipo de Usuário*</label>
                <input type="text" name="tipoUsuario" class="form-control disabled" value="@ViewBag.TipoUser" readonly>
            </div>
        }

        @if(ViewBag.Operacao == "A")
        {
            <div class="form-group">
                <label for="cpf">CPF*</label>
                <input type="text" id="cpf" name="cpf" class="form-control disabled" value="@Model.Cpf" readonly>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
        }
        else
        {
            <div class="form-group">
                <label for="cpf">CPF*</label>
                <input type="number" id="cpf" name="cpf" placeholder="CPF" value="@Model.Cpf" required>
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
        }

        <div class="form-group">
            <label for="email">E-mail*</label>
            <input type="email" id="email" name="email" placeholder="E-mail" value="@Model.Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="senha">Senha*</label>
            <input type="password" id="senha" name="senha" placeholder="Senha" value="@Model.Senha" required>
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <br />

        <button type="submit" class="btn-create">Salvar</button>
    </form>

</body>


